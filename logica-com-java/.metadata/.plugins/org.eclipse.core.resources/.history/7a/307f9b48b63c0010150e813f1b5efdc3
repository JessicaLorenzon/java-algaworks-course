import java.util.Scanner;

public class Ex01_TarefasDoDia {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		String[] tarefas = new String[5];
		
		System.out.print("Digite a tarefa 1:");
		tarefas[0] = scanner.nextLine();
		System.out.print("Digite a tarefa 2:");
		tarefas[1] = scanner.nextLine();
		System.out.print("Digite a tarefa 3:");
		tarefas[2] = scanner.nextLine();
		System.out.print("Digite a tarefa 4:");
		tarefas[3] = scanner.nextLine();
		System.out.print("Digite a tarefa 5:");
		tarefas[4] = scanner.nextLine();

		for (int i = 0; i < tarefas.length; i++) {
			System.out.println("Tarefa " + i + " : " + tarefas[i]);
		}

		scanner.close();
	}
}
